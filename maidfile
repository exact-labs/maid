# env goes at the top of the file
DEBUG = false
TEST = 'test'

# tasks in table format
[tasks]
clean = { path = "bin", script = "rm maid" }
test = { path = "bin", script = "./maid -h" }
debug = { path = "", script = ["echo {{DEBUG}}", "echo {{TEST}}", "echo {{$1}}", "echo {{CWD}}"] }
bad-task = { path = "", script = ["this_does_not_exist"] }


# seperated task
[tasks.build]
path = ""
script = [
"cargo build --release", 
"mv target/release/exact-maid bin/maid",
]
